<odoo>
    <data>
        <record id="owner_view_tree" model="ir.ui.view">
            <field name="name">owner tree view</field>
            <field name="model">owner</field>
            <field name="arch" type="xml">
                <!--            presitation tier premission-->
                <tree multi_edit="1" >
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>

        <record id="owner_view_form" model="ir.ui.view">
            <field name="name">owner tree form</field>
            <field name="model">owner</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Owner info">
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="property_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="owner_action" model="ir.actions.act_window">
            <field name="name">owner Action</field>
            <field name="res_model">owner</field>
        </record>

        <menuitem
            id="owner_menu_item"
            name="Owners"
            parent="configration_menu"
            action="owner_action"
        />
    </data>
</odoo>
